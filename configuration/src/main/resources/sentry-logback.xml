<included>
	<appender name="Sentry" class="io.sentry.logback.SentryAppender">
		<!-- Optionally change minimum Event level. Default for Events is ERROR -->
		<minimumBreadcrumbLevel>${minimumBreadcrumbLevel}</minimumBreadcrumbLevel>
		<!-- Optionally change minimum Breadcrumbs level. Default for Breadcrumbs is INFO -->
		<minimumEventLevel>${minimumEventLevel}</minimumEventLevel>

	</appender>
	<root>
		<appender-ref ref="Sentry" />
	</root>

	<springProperty name="minimumEventLevel" defaultValue="ERROR" source="sentry.minimumEventLevel" />
	<springProperty name="minimumBreadcrumbLevel" defaultValue="INFO" source="sentry.minimumBreadcrumbLevel" />

</included>
